-- üßπ X√≥a hi·ªáu ·ª©ng m·ªù 1 l·∫ßn duy nh·∫•t
task.delay(1, function() -- ƒë·ª£i 1 gi√¢y ƒë·ªÉ Fluent t·∫°o UI xong
    local lighting = game:GetService("Lighting")
    local camera = workspace.CurrentCamera

    for _, v in ipairs(lighting:GetChildren()) do
        if v:IsA("BlurEffect") or v:IsA("DepthOfFieldEffect") or v:IsA("SunRaysEffect") then
            v:Destroy()
        end
    end
    for _, v in ipairs(camera:GetChildren()) do
        if v:IsA("BlurEffect") or v:IsA("DepthOfFieldEffect") then
            v:Destroy()
        end
    end

    -- Reset FOV & √°nh s√°ng m·∫∑c ƒë·ªãnh
    camera.FieldOfView = 70
    lighting.FogEnd = 1e6
    lighting.GlobalShadows = false
end)
